<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:layout_gravity="center_horizontal|center_vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            app:srcCompat="@drawable/mapawot" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginEnd="4dp"
            android:autoSizeTextType="none"
            android:text="Locaction is disabled!"
            android:textAlignment="center"
            android:textColorLink="#BD2121"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="298dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDeviceID"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="120"
            android:focusedByDefault="true"
            android:hint="Kod dostępu"
            android:textSize="26dp" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_weight="120"
            android:hint="Numer telefonu"
            android:textSize="26dp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:defaultFocusHighlightEnabled="false"
            android:text="Zaloguj urządzenie"
            android:textColorLink="#38A965"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/informationText"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginEnd="0dp"
            android:autoSizeTextType="none"
            android:text="Urządzenie niezalogowane"
            android:textAlignment="center"
            android:textColorLink="#BD2121"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="298dp" />

    </LinearLayout>


</RelativeLayout>